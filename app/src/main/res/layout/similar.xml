<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_320sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:backgroundTint="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green_border">
            <ImageView
                android:id="@+id/image_similarprojects_adapter"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/new_pine_proj"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/name_similarprojects_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_similarprojects_adapter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/iter_bold"
                android:text="New Pine Residency Apart.."
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/possession_text_similarprojects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Possession from June 2024"
                android:layout_below="@+id/name_similarprojects_adapter"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/iter_medium"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/location_icon_similarprojects"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/possession_text_similarprojects"
                android:src="@drawable/location_dark"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/text_location_similarprojects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/possession_text_similarprojects"
                android:layout_toEndOf="@+id/location_icon_similarprojects"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:textSize="@dimen/_12ssp"
                android:text="2, 3, 4 BHK Appartments, Rheha \nStudios in Gift City, Gandhinagar, Ahmedabad"/>
            <ImageView
                android:id="@+id/rupee_icon_similarprojects"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/rupee_dark"
                android:layout_below="@+id/text_location_similarprojects"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/price_text_similarprojects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rupee_icon_similarprojects"
                android:layout_below="@+id/text_location_similarprojects"
                android:text="88.69 Lac - 2.28 Crore"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                />
            <ImageView
                android:id="@+id/view_details_similarprojects"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/view_details"
                android:layout_below="@+id/rupee_icon_similarprojects"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10ssp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>