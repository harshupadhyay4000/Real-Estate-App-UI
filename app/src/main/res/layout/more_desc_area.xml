<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_310sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green_border">
            <ImageView
                android:id="@+id/icon_area_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_one_area"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/circle_background_img"/>
            <TextView
                android:id="@+id/whatsgreat_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_area_adapter"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="What's Great!"
                android:textSize="@dimen/_10ssp"
                />
            <TextView
                android:id="@+id/heading_one_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_area_adapter"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@font/iter_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Mid Segment Budget" />
            <TextView
                android:id="@+id/description_one_adapter_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor incididunt ut labore et \ndolore magna aliqua. Utenimcididunt ut labo "
                android:layout_below="@+id/heading_one_adapter"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10ssp"
                />
            <TextView
                android:id="@+id/commercial_hub_heading_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_one_adapter_heading"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="Commercial Hub"
                android:fontFamily="@font/iter_medium"
                />
            <TextView
                android:id="@+id/description_two_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/commercial_hub_heading_adapter"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor incididunt ut labore et \ndolore magna aliqua. Utenimcididunt ut labo "/>
            <TextView
                android:id="@+id/ready_tomove_heading_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_two_adapter"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="Commercial Hub"
                android:fontFamily="@font/iter_medium"
                />
            <TextView
                android:id="@+id/description_three_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ready_tomove_heading_adapter"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor incididunt ut labore et \ndolore magna aliqua. Utenimcididunt ut labo "/>





        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>