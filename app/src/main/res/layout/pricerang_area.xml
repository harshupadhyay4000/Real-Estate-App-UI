<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_90sdp"
        app:cardCornerRadius="@dimen/_2sdp"

        android:backgroundTint="@color/newtransparentdarkgreen"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green_border"
            >
            <TextView
                android:id="@+id/type_text_pricerange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:text="Avg. Property Rates"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_12ssp"

                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/price_text_pricerange_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/type_text_pricerange"
                android:text="7,200/- sq.ft."
                android:layout_marginLeft="@dimen/_20sdp" />
            <TextView
                android:id="@+id/view_properties_within_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Properties within the area"
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/price_text_pricerange_adapter"
                android:layout_marginLeft="@dimen/_20sdp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view_properties_within_heading"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/price_text_pricerange_adapter"
                android:background="@drawable/back_btn"
                android:rotationY="180"
                android:layout_marginLeft="@dimen/_10ssp"
                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>