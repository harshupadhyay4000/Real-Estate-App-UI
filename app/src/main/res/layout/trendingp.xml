<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_180sdp"
        android:layout_margin="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_7sdp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/green_border">
        <ImageView
            android:id="@+id/image_trendingp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="match_parent"
            android:src="@drawable/flat_img"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/residency_name_trendingp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Pine \nResidency Apartme.."
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/iter_bold"
            android:layout_toRightOf="@+id/image_trendingp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/possession_text_trendingp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/residency_name_trendingp"
            android:layout_toRightOf="@+id/image_trendingp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Posssession from Jun 2024"
            android:textColor="@color/black"
            android:fontFamily="@font/iter_medium"
            android:textSize="@dimen/_10ssp"
            />
        <ImageView
            android:id="@+id/rera_icon_trendingp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/rera"
            android:layout_below="@+id/possession_text_trendingp"
            android:layout_toRightOf="@+id/image_trendingp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />
        <ImageView
            android:id="@+id/location_icon_trendingp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/location_icon"
            android:layout_below="@+id/rera_icon_trendingp"
            android:layout_toRightOf="@+id/image_trendingp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/address_text_trendingp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2BHK, Bopal, Ahmedabad"
            android:layout_below="@+id/rera_icon_trendingp"
            android:layout_toEndOf="@+id/location_icon_trendingp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/iter_medium"/>
        <ImageView
            android:id="@+id/rupee_icon_trendingp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/rupee"
            android:layout_below="@+id/location_icon_trendingp"
            android:layout_toEndOf="@+id/image_trendingp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/price_text_trendingp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rupee_icon_trendingp"
            android:layout_below="@+id/address_text_trendingp"
            android:text="88.69 Lac - 2.28 Crore"
            android:textColor="@color/black"
            android:fontFamily="@font/iter_bold"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_3sdp"/>
        <ImageButton
            android:id="@+id/brochure_btn_trend_adapter"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/brochure_btn"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/price_text_trendingp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>