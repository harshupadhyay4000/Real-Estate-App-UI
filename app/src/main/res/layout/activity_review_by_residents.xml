<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Pages.Reviews.ReviewByResidents">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back_btn_residents_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"
            android:background="@drawable/button_background"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <TextView
            android:id="@+id/review_heading_residents_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_btn_residents_review"
            android:textColor="@color/black"
            android:fontFamily="@font/iter_bold"
            android:textSize="@dimen/_15ssp"
            android:text="Reviews By Residents"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"/>
        <ImageButton
            android:id="@+id/recommended_btn_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recomended_btn"
            android:background="@drawable/button_background"
            android:layout_below="@+id/review_heading_residents_act"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <ImageButton
            android:id="@+id/recent_btn_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recent_btn"
            android:background="@drawable/button_background"
            android:layout_below="@+id/review_heading_residents_act"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/recommended_btn_residents"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <ImageButton
            android:id="@+id/negative_btn_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/negative_btn"
            android:background="@drawable/button_background"
            android:layout_below="@+id/review_heading_residents_act"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/recent_btn_residents"
            android:layout_marginLeft="@dimen/_5sdp"
            />

        <ImageButton
            android:id="@+id/viewall_residents_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_all"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@+id/negative_btn_residents"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_review_residents_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewall_residents_act"
            android:layout_marginBottom="@dimen/_10sdp"/>





    </RelativeLayout>

</RelativeLayout>