<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Pages.Fragments.Gallery_Fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/gallery_heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/iter_bold"
        android:text="Gallery"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkgreen"
        android:text="(400)"
        android:fontFamily="@font/iter_bold"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/gallery_heading_text"
        />

    <ImageView
        android:id="@+id/view_all_images_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/view_all"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:clickable="true"/>


        <GridLayout
            android:id="@+id/grid_one_frag_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_all_images_gallery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gallery_img1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gallery_img2"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </GridLayout>

        <GridLayout
            android:id="@+id/grid_two_frag_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_one_frag_gallery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gallery_img3"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gallery_img4"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </GridLayout>
        <GridLayout
            android:id="@+id/grid_three_frag_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_two_frag_gallery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gallery_img5"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gallery_img2"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </GridLayout>



    </RelativeLayout>
</RelativeLayout>