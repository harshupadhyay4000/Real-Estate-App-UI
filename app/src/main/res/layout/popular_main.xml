<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_230sdp"
    android:layout_height="@dimen/_320sdp"

    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:backgroundTint="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentdarkgreen">
        <ImageView
            android:id="@+id/image_popular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/property_two"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/name_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Pine Residency Apart.."
            android:fontFamily="@font/iter_bold"
            android:textColor="@color/darkgreen"
            android:layout_below="@+id/image_popular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13ssp"/>
        <TextView
            android:id="@+id/possession_text_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possession from June 2024"
            android:layout_below="@+id/name_popular"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/iter_medium"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/location_icon_popular"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/possession_text_popular"
            android:src="@drawable/location_dark"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/text_location_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/possession_text_popular"
            android:layout_toEndOf="@+id/location_icon_popular"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/iter_medium"
            android:textSize="@dimen/_12ssp"
            android:text="2, 3, 4 BHK Appartments, Rheha \nStudios in Gift City, Gandhinagar, Ahmedabad"/>
        <ImageView
            android:id="@+id/rupee_icon_popular"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/rupee_dark"
            android:layout_below="@+id/text_location_popular"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/price_text_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rupee_icon_popular"
            android:layout_below="@+id/text_location_popular"
            android:text="88.69 Lac - 2.28 Crore"
            android:textColor="@color/black"
            android:fontFamily="@font/iter_bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <ImageView
            android:id="@+id/view_details_popular"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/view_details"
            android:layout_below="@+id/rupee_icon_popular"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10ssp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>