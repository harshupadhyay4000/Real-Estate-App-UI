<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_70sdp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="@dimen/_10sdp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ammenities_icon_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/swim_icon"

        />

        <TextView
            android:id="@+id/ammenity_name_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cricket Pitch"
            android:textColor="@color/black"
            android:fontFamily="@font/iter_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            android:textStyle="bold"

            android:layout_below="@+id/ammenities_icon_adapter"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>