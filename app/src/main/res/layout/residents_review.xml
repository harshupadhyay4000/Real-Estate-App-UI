<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_230sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green_border">
            <ImageView
                android:id="@+id/rating_area_residents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating_area"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:text="26 people found it useful"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"/>
            <ImageView
                android:id="@+id/userprofile_residentada_act"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/contact_icon_user"/>

            <TextView
                android:id="@+id/name_reviewername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/userprofile_residentada_act"
                android:fontFamily="@font/iter_bold"
                android:text="Mr. Khalas Makhija"
                android:layout_below="@+id/rating_area_residents"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                />
            <TextView
                android:id="@+id/date_residents_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/userprofile_residentada_act"
                android:layout_below="@+id/name_reviewername"
                android:textSize="@dimen/_8ssp"
                android:fontFamily="@font/iter_medium"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Owner of property, posted 2yrs ago"/>

            <TextView
                android:id="@+id/positives_heading_residents_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POSITIVES"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:textSize="@dimen/_8ssp"
                android:layout_below="@+id/userprofile_residentada_act"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                />
            <TextView
                android:id="@+id/positive_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/positives_heading_residents_review"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:textSize="@dimen/_8ssp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor incididunt ut labore et  \ndolore magna aliqua."
                />

            <TextView
                android:id="@+id/negative_heading_residents_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/positive_para"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:textSize="@dimen/_8ssp"
                android:text="NEGATIVES"
                />
            <TextView
                android:id="@+id/negative_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/negative_heading_residents_review"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/iter_medium"
                android:textSize="@dimen/_8ssp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor incididunt ut labore et  \ndolore magna aliqua."
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>