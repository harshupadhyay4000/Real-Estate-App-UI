<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Pages.Fragments.Review_Fragment"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_frag_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



        <TextView
            android:id="@+id/review_heading_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/iter_bold"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>
        <ImageView
            android:id="@+id/image_review_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/review_img"
            android:layout_below="@+id/review_heading_review"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/review_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandeep S."
            android:textColor="@color/black"
            android:fontFamily="@font/iter_bold"
            android:textSize="@dimen/_12ssp"
            android:layout_toRightOf="@+id/image_review_user"
            android:layout_below="@+id/review_heading_review"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:fontFamily="@font/iter_medium"
            android:textSize="@dimen/_12ssp"
            android:text="2 months ago"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@+id/review_heading_review"
            android:layout_marginTop="@dimen/_15sdp"/>
        <TextView
            android:id="@+id/review_text_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_review_user"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Review done by the user appears here..."
            android:fontFamily="@font/iter_medium"
            android:textColor="@color/grey"
            />
        <ImageView
            android:id="@+id/rate_stars_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rate_stars"
            android:layout_below="@+id/review_text_review"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_text_review"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/helpful_img"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_rev"
            android:layout_below="@+id/rate_stars_img"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>